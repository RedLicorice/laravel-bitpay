{
    "name": "redlicorice/laravel-bitpay",
    "description": "Bitpay wrapper for laravel, modified for using custom btcpay server",
    "keywords": [
        "bitpay",
        "BTC",
        "laravel"
    ],
    "homepage": "https://github.com/RedLicorice/laravel-bitpay",
    "license": "MIT",
    "authors": [
        {
            "name": "RedLicorice",
            "email": "redlicorice@protonmail.com",
            "homepage": "https://github.com/RedLicorice/",
            "role": "Developer"
        },
        {
            "name": "Vaibhavraj Roham",
            "email": "vaibhavraj@vrajroham.me",
            "homepage": "https://vrajroham.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "bitpay/sdk": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0"
    },
    "autoload": {
        "psr-4": {
            "RedLicorice\\LaravelBitpay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RedLicorice\\LaravelBitpay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "RedLicorice\\LaravelBitpay\\LaravelBitpayServiceProvider"
            ],
            "aliases": {
                "LaravelBitpay": "RedLicorice\\LaravelBitpay\\LaravelBitpayFacade"
            }
        }
    },
    "minimum-stability": "dev"
}